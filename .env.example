# Server Configuration
NODE_ENV=production
PORT=3000

# External API Configuration (Production URLs)
GUS_BASE_URL=https://wyszukiwarkaregon.stat.gov.pl/wsBIR/UslugaBIRzewnPubl.svc
KRS_BASE_URL=https://api-krs.ms.gov.pl
CEIDG_BASE_URL=https://dane.biznes.gov.pl/api/ceidg/v3

# External API Credentials (REPLACE WITH REAL VALUES)
GUS_USER_KEY=your-production-gus-key-here-minimum-32-characters
CEIDG_JWT_TOKEN=your-production-ceidg-jwt-token-from-registration-process

# API Keys for Client Authentication (REPLACE WITH REAL VALUES)
VALID_API_KEYS=production-api-key-1-at-least-32-chars,production-api-key-2-at-least-32-chars

# Performance Configuration (Constitutional Requirements)
REQUEST_TIMEOUT=15000
EXTERNAL_API_TIMEOUT=5000
RATE_LIMIT_PER_MINUTE=100

# Retry Configuration (Per Service Optimization)
GUS_MAX_RETRIES=2
GUS_INITIAL_DELAY=100
KRS_MAX_RETRIES=2
KRS_INITIAL_DELAY=200
CEIDG_MAX_RETRIES=2
CEIDG_INITIAL_DELAY=150

# Logging Configuration (Production JSON Logging)
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=3000